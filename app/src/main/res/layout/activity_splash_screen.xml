<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/Rlayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/img_background"
tools:context="com.wefly.wealert.activities.SplashScreensActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle"
    android:layout_marginBottom="@dimen/activity_vertical_margin_cus"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_cus"
    android:layout_marginRight="@dimen/activity_horizontal_margin_cus"
    android:layout_marginTop="@dimen/activity_vertical_margin_top_cus">
    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ChasingDots"
            android:layout_width="match_parent"
            android:layout_height="465dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:paddingBottom="50dp"
            android:paddingEnd="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="50dp"
            app:SpinKit_Color="#30b619" />

    </LinearLayout>
</RelativeLayout>





</RelativeLayout>

